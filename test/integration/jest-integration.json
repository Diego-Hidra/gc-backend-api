{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testRegex": "test/integration/.*\\.integration\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
  "^src/(.*)$": "<rootDir>/src/$1"
},
"setupFiles": ["dotenv/config"]
}
